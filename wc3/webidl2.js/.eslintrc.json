{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "node": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["import"],
  "rules": {
    "eol-last": "error",
    "import/extensions": ["error", "always"],
    "no-console": "error",
    "no-constant-condition": ["error", { "checkLoops": false }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-trailing-spaces": "error",
    "prefer-const": "error",
    "semi": "error"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
